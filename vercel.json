{
  "builds": [
    {
      "src": "portfolio/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.10" }
    },
    {
      "src": "staticfiles/**/*",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/static/:path*",
      "destination": "/staticfiles/:path*"
    },
    {
      "source": "/:path*",
      "destination": "/portfolio/wsgi.py"
    }
  ],
  "redirects": [
    {
      "source": "/(.*)",
      "destination": "http://mingjie-portfolio.vercel.app/$1",
      "permanent": false
    }
  ]
}
