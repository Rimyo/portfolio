{
    "builds": [
      {
        "src": "portfolio/wsgi.py",
        "use": "@vercel/python",
        "config": { "maxLambdaSize": "15mb", "runtime": "python3.10" }
      },
      {
        "src": "staticfiles/**/*",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/static/(.*)",
        "dest": "/staticfiles/$1"
      },
      {
        "src": "/(.*)",
        "dest": "portfolio/wsgi.py"
      }
    ],
    "headers": [
      {
        "source": "/(.*)",
        "headers": [
          {
            "key": "Strict-Transport-Security",
            "value": ""
          },
          {
            "key": "Cross-Origin-Opener-Policy",
            "value": ""
          },
          {
            "key": "Referrer-Policy",
            "value": ""
          },
          {
            "key": "X-Content-Type-Options",
            "value": ""
          },
          {
            "key": "X-Frame-Options",
            "value": ""
          }
        ]
      }
    ]
  }